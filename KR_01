package com.metanit;

public class Main {
            public static void main(String[] args) {
                for (int k = 1; k < 6 ; k++) {

                    for (int i = 0; i < k ; i++) {
                        System.out.print(0);
                    }
                    System.out.println();
                }
            }
        }
    
